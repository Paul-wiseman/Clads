<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gender_dialog_gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/all_gender_text"
            android:layout_marginTop="@dimen/imageview_width_34dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/gender_dialog_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_100dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/gender_dialog_gender_textview"
            app:layout_constraintTop_toBottomOf="@+id/gender_dialog_gender_textview">

            <RadioButton
                android:id="@+id/gender_dialog_female_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/gender_dialog_femal_text"
                android:textColor="@color/navy_blue"
                android:textSize="@dimen/text_size_18sp" />

            <RadioButton
                android:id="@+id/gender_dialog_male_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/gender_dialog_male_text"
                android:textColor="@color/navy_blue"
                android:textSize="@dimen/text_size_18sp" />

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>