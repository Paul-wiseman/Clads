<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.profilemanagement.TablayoutAccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/edit_profile_account_tab_imageview"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="@dimen/margin_100dp"
            android:layout_marginTop="@dimen/margin_70dp"
            android:src="@drawable/add_image_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/edit_profile_account_tab_change_picture_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/account_fragment_tap_to_change_picture_text"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_account_tab_imageview"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_account_tab_imageview"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_account_tab_imageview" />

        <View
            android:id="@+id/account_fragment_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_or_width_1dp"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_account_tab_change_picture_textview"
            android:layout_marginTop="@dimen/margin_20dp"
            />

        <TextView
            android:id="@+id/edit_profile_first_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:layout_marginStart="@dimen/margin_30dp"
            android:text="@string/first_name_dialog_first_name_text"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/navy_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_fragment_divider" />

        <TextView
            android:id="@+id/edit_profile_first_name_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name_dialog_first_name_text"
            android:layout_marginEnd="@dimen/margin_30dp"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_first_name_textview" />

        <TextView
            android:id="@+id/edit_profile_last_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/all_last_name_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_first_name_textview"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_first_name_textview" />

        <TextView
            android:id="@+id/edit_profile_last_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_last_name_text"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_first_name_value_textview"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/edit_profile_last_name_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_last_name_textview" />

        <TextView
            android:id="@+id/edit_profile_other_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/all_other_name_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_last_name_textview"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_last_name_textview" />

        <TextView
            android:id="@+id/edit_profile_other_name_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_other_name_text"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_last_name_value"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_other_name_textview" />

        <TextView
            android:id="@+id/edit_profile_gender_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/all_gender_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_other_name_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_other_name_textview" />

        <TextView
            android:id="@+id/edit_profile_gender_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_gender_text"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_other_name_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_gender_textview" />

        <TextView
            android:id="@+id/edit_profile_work_address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/all_workshop_address_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_gender_textview"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_gender_textview" />

        <TextView
            android:id="@+id/edit_profile_work_address_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_workshop_address_text"
            android:maxWidth="@dimen/width_200dp"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_gender_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_work_address_textview" />

        <TextView
            android:id="@+id/edit_profile_showroom_addrress_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/all_showroom_address_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_work_address_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_work_address_value_textview" />

        <TextView
            android:id="@+id/edit_profile_showroom_address_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_showroom_address_text"
            android:maxWidth="@dimen/width_200dp"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_work_address_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_showroom_addrress_textview" />

        <TextView
            android:id="@+id/edit_profile_number_of_employees_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:maxWidth="@dimen/width_170dp"
            android:textStyle="bold"
            android:text="@string/account_fragment_number_of_employees_apprentices_text"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_showroom_addrress_textview"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_showroom_address_value_textview" />

        <EditText
            android:id="@+id/edit_profile_number_of_employees_value_textview"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/width_200dp"
            android:hint="@string/acount_fragment_number_of_employees_text"
            android:inputType="number"
            android:backgroundTint="@color/deep_sky_blue"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_showroom_address_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_number_of_employees_textview" />

        <TextView
            android:id="@+id/edit_profile_legal_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/account_fragment_legal_status_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_number_of_employees_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_number_of_employees_textview" />

        <EditText
            android:id="@+id/edit_profile_legal_status_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/width_200dp"
            android:hint="@string/account_fragment_legal_status_text"
            android:backgroundTint="@color/deep_sky_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_number_of_employees_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_legal_status_textview" />

        <TextView
            android:id="@+id/edit_profile_union_membership_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_fragment_union_membership_text"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_30dp"
            android:textColor="@color/grey_text"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_legal_status_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_legal_status_value_textview" />

        <TextView
            android:id="@+id/edit_profile_name_of_union_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/account_fragment_name_of_union_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_union_membership_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_union_membership_textview" />

        <EditText
            android:id="@+id/edit_profile_name_of_union_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/width_200dp"
            android:hint="@string/account_fragment_name_of_union_text"
            android:backgroundTint="@color/deep_sky_blue"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_legal_status_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_name_of_union_textview" />

        <TextView
            android:id="@+id/edit_profile_ward_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/account_fragment_ward_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_name_of_union_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_name_of_union_value_textview" />

        <EditText
            android:id="@+id/edit_profile_ward_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/account_fragment_ward_text"
            android:maxWidth="@dimen/width_200dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_name_of_union_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_ward_textview" />

        <TextView
            android:id="@+id/edit_profile_local_government_area_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_fragment_local_government_area_text"
            android:textStyle="bold"
            android:textColor="@color/navy_blue"
            android:layout_marginTop="@dimen/margin_30dp"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_ward_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_ward_value_textview" />

        <EditText
            android:id="@+id/edit_profile_local_government_area_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/account_fragment_lga_text"
            android:backgroundTint="@color/deep_sky_blue"
            android:maxWidth="@dimen/width_200dp"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_ward_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_local_government_area_textview" />

        <TextView
            android:id="@+id/edit_profile_state_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="@string/all_state_text"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_local_government_area_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_local_government_area_value_textview" />

        <EditText
            android:id="@+id/edit_profile_state_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/all_state_text"
            android:backgroundTint="@color/deep_sky_blue"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_local_government_area_value_textview"
            app:layout_constraintTop_toTopOf="@+id/edit_profile_state_textview" />

        <Button
            android:id="@+id/edit_profile_account_save_changes_button"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_60dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:maxWidth="@dimen/width_200dp"
            android:text="@string/payment_options_fragment_save_changes_text"
            android:layout_marginBottom="@dimen/margin_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edit_profile_state_value_textview"
            app:layout_constraintStart_toStartOf="@+id/edit_profile_state_textview"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_state_textview" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView >