<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_measurement_dialog_fragment"
    android:layout_width="300dp"
    android:layout_height="470dp"
    android:padding="@dimen/margin_20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="470dp">

        <TextView
            android:id="@+id/add_measurement_fragment_add_measurement_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_60dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="@dimen/margin_24dp"
            android:text="@string/add_measurement"
            android:textColor="@color/navy_blue"
            android:textFontWeight="700"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_measurement_fragment_add_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="@dimen/text_size_18sp"
            android:text="@string/name"
            android:textColor="@color/navy_blue"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintStart_toStartOf="@+id/add_measurement_fragment_add_measurement_text_view"
            app:layout_constraintTop_toBottomOf="@+id/add_measurement_fragment_add_measurement_text_view" />

        <EditText
            android:id="@+id/add_measurement_fragment_measurement_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:backgroundTint="@color/navy_blue"
            android:hint="@string/full_length"
            android:inputType="text"
            android:textColor="@color/menu_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/add_measurement_fragment_add_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/add_measurement_fragment_add_name_text_view" />

        <TextView
            android:id="@+id/add_measurement_fragment_edit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:fontFamily="@font/poppins"
            android:lineHeight="@dimen/margin_18dp"
            android:text="@string/add_measurement"
            android:textColor="@color/navy_blue"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintStart_toStartOf="@+id/add_measurement_fragment_measurement_name_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/add_measurement_fragment_measurement_name_edit_text" />

        <EditText
            android:id="@+id/add_measurement_dialog_fragment_measurement_value_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:backgroundTint="@color/navy_blue"
            android:fontFamily="@font/roboto"
            android:hint="47"
            android:inputType="number"
            android:lineHeight="@dimen/margin_24dp"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintEnd_toEndOf="@+id/add_measurement_fragment_measurement_name_edit_text"
            app:layout_constraintStart_toStartOf="@+id/add_measurement_fragment_edit_text_view"
            app:layout_constraintTop_toBottomOf="@+id/add_measurement_fragment_edit_text_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_measurement_dialog_fragment_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="@drawable/login_screen_custom_button_shape"
            android:text="Save"
            app:backgroundTint="@color/deep_sky_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/add_measurement_dialog_fragment_measurement_value_edit_text"
            app:layout_constraintStart_toStartOf="@+id/add_measurement_dialog_fragment_measurement_value_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/add_measurement_dialog_fragment_measurement_value_edit_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>