<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.profilemanagement.TablayoutPaymentMethodFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/payment_terms_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginTop="@dimen/margin_28dp"
            android:fontFamily="@font/poppins"
            android:text="@string/payment_method_payment_terms_text"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/payment_terms_text_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_24dp"
            android:text="@string/payment_method_payment_terms_text"
            app:layout_constraintBottom_toBottomOf="@+id/payment_terms_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/payment_terms_textview" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/payment_methods_frament_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:elevation="@dimen/elevation_20"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/payment_terms_text_textview"
            app:layout_constraintTop_toBottomOf="@+id/payment_terms_text_textview"
            app:tint="@color/white" />

        <View
            android:id="@+id/payment_methods_divider"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/layout_height_or_width_1dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="@+id/payment_methods_frament_fab"
            app:layout_constraintStart_toStartOf="@+id/payment_terms_textview"
            app:layout_constraintTop_toBottomOf="@+id/payment_methods_frament_fab" />

        <TextView
            android:id="@+id/payment_options_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_22dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:fontFamily="@font/poppins"
            android:text="@string/payment_methods_payment_options_text"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/payment_methods_divider"
            app:layout_constraintTop_toBottomOf="@+id/payment_methods_divider" />

        <TextView
            android:id="@+id/payment_options_text_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:maxWidth="@dimen/width_143dp"
            android:text="@string/payment_methods_payment_options_text"
            app:layout_constraintBottom_toBottomOf="@+id/payment_options_textview"
            app:layout_constraintEnd_toEndOf="@+id/payment_methods_divider"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/payment_options_textview" />

        <Button
            android:id="@+id/payment_methods_save_changes_button"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/height_50dp"
            android:layout_marginTop="@dimen/margin_100dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:text="@string/payment_options_fragment_save_changes_text"
            app:layout_constraintEnd_toEndOf="@+id/payment_options_text_textview"
            app:layout_constraintStart_toStartOf="@+id/payment_options_textview"
            app:layout_constraintTop_toBottomOf="@+id/payment_options_text_textview" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>